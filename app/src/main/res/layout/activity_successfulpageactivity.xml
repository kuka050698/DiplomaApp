<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.Successfulpageactivity"
        android:background="@drawable/backgrounnd">
    <ImageView
            android:id="@+id/correct"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/correctttt"
            app:layout_constraintHorizontal_bias="0.658" app:layout_constraintVertical_bias="0.261"/>

    <TextView
            android:id="@+id/found_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/correct"
            android:text="FOUND ID:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="104dp" app:layout_constraintHorizontal_bias="0.406"/>
    <TextView
            android:id="@+id/finger_id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@id/found_id"
            app:layout_constraintTop_toBottomOf="@id/correct"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="fiudifd"
            android:textColor="#fff"
            android:textSize="25sp"
            app:layout_constraintHorizontal_bias="0.142" app:layout_constraintVertical_bias="0.322"/>
    <Button
            android:id="@+id/start_button"
            android:layout_width="360dp"
            android:layout_height="39dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/finger_id"
            android:background="@drawable/backgrounnd"
            android:layout_marginTop="96dp"
            android:text="Details"
            android:textColor="#fff"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintHorizontal_bias="0.686"/>

</android.support.constraint.ConstraintLayout>