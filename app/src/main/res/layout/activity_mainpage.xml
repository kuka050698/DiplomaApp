<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainPage"
android:background="@drawable/backgrounnd">
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"


            card_view:layout_constraintHorizontal_bias="0.39"
            card_view:layout_constraintVertical_bias="0.259">
        <android.support.constraint.ConstraintLayout
                android:layout_width="370dp"
                android:layout_height="250dp"
                android:background="@drawable/backgrounnd">

            <ImageView
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/profile_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/circlekuanysh"
                    card_view:layout_constraintVertical_bias="0.35" android:layout_marginLeft="120dp"/>
            <TextView
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/name_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kuanysh Yessenzhanov"
                    android:textStyle="italic"
                    android:textColor="#fff"
                    android:gravity="center_vertical|center_horizontal|top"
                    android:textSize="25sp"
                    android:layout_marginTop="172dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="69dp"/>

            <TextView
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/name_profile"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/blood_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="Blood group:"
                    android:textColor="#fff"
                    android:gravity="center_vertical|center_horizontal|top"
                    android:textSize="25sp"
                    card_view:layout_constraintVertical_bias="1.0"
                    card_view:layout_constraintHorizontal_bias="0.45" android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="Yes"
                    android:id="@+id/blood_group_number"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintLeft_toRightOf="@id/blood_group"
                    card_view:layout_constraintTop_toBottomOf="@id/name_profile"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textStyle="italic"
                    android:gravity="center_vertical|center_horizontal|top"
                    card_view:layout_constraintHorizontal_bias="0"
                    card_view:layout_constraintVertical_bias="0.3"/>

            <ImageView
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:layout_width="80dp"
                    android:layout_height="73dp"
                    android:src="@drawable/mediker"
                    android:layout_marginRight="16dp" android:layout_marginTop="4dp"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
    <Button
            android:id="@+id/more_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="View More"
            android:textColor="#fff"
            android:background="@drawable/backgrounnd"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.495"/>

</android.support.constraint.ConstraintLayout>