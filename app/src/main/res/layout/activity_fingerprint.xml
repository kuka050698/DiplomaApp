<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.FingerprintActivity"
android:background="@drawable/backgrounnd">
    <ImageView
            android:id="@+id/fingerprint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finger"
            app:layout_constraintHorizontal_bias="0.452" app:layout_constraintVertical_bias="0.255"/>

    <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fingerprint"
            android:text="@string/app"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:fontFamily="@string/gen"
            android:layout_marginTop="104dp" app:layout_constraintHorizontal_bias="0.551"/>
    <Button
            android:id="@+id/finger_button"
            android:layout_width="320dp"
            android:layout_height="39dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_text"
            android:background="@drawable/background"
            android:layout_marginTop="104dp"
            android:text="Start the fingerprint sensor"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintHorizontal_bias="0.494"/>

</android.support.constraint.ConstraintLayout>